<h1><%= @celebrity.name %>'s Booking Page</h1>

<div class="container">
  <ul>
    <li>$<%= @celebrity.daily_rate %></li>
    <li><%= @celebrity.category %></li>
    <li><%= @celebrity.description %></li>
    <li><%= @celebrity.rating %></li>
    <% @celebrity.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </ul>
</div>

<%= link_to "Book #{@celebrity.name}", new_celebrity_booking_path(@celebrity) %>


<% if @celebrity.user == current_user %>
  <%= link_to "Edit", edit_celebrity_path %>
  <%= link_to "Delete", celebrity_path(@celebrity), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end%>

<%= link_to "All Celebrities", celebrities_path %>
